# Local Development Environment Variables
# For running services locally (not in Docker)
# All services use 127.0.0.1 since they run on the host machine

# ============================================
# Service Ports
# ============================================
USER_SVC_PORT=8081
JOB_SVC_PORT=8082
EMAIL_SVC_PORT=8083
IMAGE_SVC_PORT=8084
CLIENT_SVC_PORT=8085

# ============================================
# Service URLs (all localhost for local dev)
# ============================================
USER_SVC_URL=http://127.0.0.1:8081
JOB_SVC_URL=http://127.0.0.1:8082
EMAIL_SVC_URL=http://127.0.0.1:8083
IMAGE_SVC_URL=http://127.0.0.1:8084
CLIENT_SVC_URL=http://127.0.0.1:8085

# ============================================
# MinIO (running in Docker)
# ============================================
MINIO_HOST=127.0.0.1
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_SCHEME=http://
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
AWS_REGION=us-east-1
IMAGE_BUCKET=msvc-images
IMAGE_BUCKET_MAX_AGE=3600

# ============================================
# OpenTelemetry (disabled for local dev)
# ============================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://127.0.0.1:4318
OTEL_SERVICE_NAME=local_dev

# ============================================
# Database
# ============================================
DB_POOL_SIZE=5
DATABASE_PATH=./db/job_service.db

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=console
